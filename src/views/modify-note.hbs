{{> header }}

<div class="mycontainer mx-auto mt-3">
	<h3 class="h3 text-center">Modifica tu nota</h3>
	<form>
		<div class="form-group">
			<label for="title">Título</label>
			<input type="text" name="title" class="form-control" value="{{ note.title }}" placeholder="Escribe un título" required>
		</div>
		<div class="form-group">
			<label for="category">Categoría</label>
			<input type="text" name="category" class="form-control" value="{{ note.category }}" placeholder="Categoría o sección" required>
		</div>
		<div class="form-group">
			<label for="description">Descripción</label>
			<textarea type="text" name="description" rows="3" class="form-control" placeholder="Cuerpo de la nota" required>{{ note.description }}</textarea>
		</div>
		<div class="btns">
			<a href="/note/{{ note._id }}" class="btn bg-page-blue">
				Cancelar <i class="fas fa-undo-alt"></i>
			</a>
			<a href="" id="submit" class="btn bg-page-green">
				Guardar <i class="fas fa-upload"></i>
			</a>
		</div>
	</form>
</div>

