{{> header }}

<div class="row">
	<!-- Inicio de notas -->
	{{#each notes }}
		<div class="col s12 l4">
			<div class="card">
				<div class="card-content">
					<span class="card-title">{{ this.title }}</span>
					<p>{{ this.category }}</p>
				</div>
				<div class="card-action">
					<a href="/note/{{ this._id }}">Ver m√°s</a>
					<a href="#" class="color-red">Eliminar</a>
				</div>
			</div>		
		</div>
	{{/each }}
	<!-- Final de notas -->

	<!-- Inicio de FAB -->
	<div class="fixed-action-btn">
		<a href="/create-note" class="btn-floating btn-large page-color color-green">
			<i class="large material-icons">add</i>
		</a>
	</div>
	<!-- Final de FAB -->
</div>

{{> footer}}